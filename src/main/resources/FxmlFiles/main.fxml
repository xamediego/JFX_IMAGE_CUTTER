<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.MainController">
   <children>
      <HBox fx:id="topBar" alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0">
         <children>
            <Label text="Edit Image" textFill="WHITE">
               <font>
                  <Font name="Bookshelf Symbol 7" size="20.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <HBox fx:id="midBox" alignment="CENTER" prefHeight="300.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <StackPane fx:id="stackPane" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView fx:id="image" fitHeight="300.0" pickOnBounds="true" preserveRatio="true">
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
                  <HBox alignment="CENTER" maxHeight="300.0" maxWidth="600.0" prefHeight="300.0" prefWidth="600.0" StackPane.alignment="CENTER">
                     <children>
                        <HBox fx:id="rec1" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <HBox fx:id="filterBox" maxHeight="300.0" maxWidth="300.0" minHeight="300.0" minWidth="300.0" onMouseDragged="#dragged" prefHeight="300.0" prefWidth="300.0" />
                        <HBox fx:id="rec2" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </StackPane>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox fx:id="lowBar" alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" onAction="#selectImage" text="Select File">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Button>
            <HBox fx:id="lowBar1" alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="0.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#save" text="Save">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
</VBox>
