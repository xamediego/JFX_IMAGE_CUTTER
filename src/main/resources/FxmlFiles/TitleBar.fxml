<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root fx:id="titleBox" stylesheets="@../Styling/titlebar.css" type="VBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox maxHeight="-Infinity" minHeight="30.0" minWidth="320.0" prefHeight="30.0" prefWidth="320.0">
          <children>
              <HBox alignment="CENTER_LEFT" spacing="5.0">
                  <children>
                      <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                          <image>
                              <Image url="@../Images/App/icon.png" />
                          </image>
                      </ImageView>
                      <Label fx:id="title" text="Sneed Cutter" />
                  </children>
              </HBox>
              <HBox HBox.hgrow="SOMETIMES" />
              <HBox>
                  <children>
                      <Button id="menuButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#minimize" prefHeight="30.0" prefWidth="45.0">
                          <graphic>
                              <FontIcon iconColor="WHITE" iconLiteral="far-window-minimize" wrappingWidth="12.0" />
                          </graphic>
                      </Button>
                      <Button id="menuButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#minMax" prefHeight="30.0" prefWidth="45.0">
                          <graphic>
                              <FontIcon fx:id="minMaxIcon" iconColor="WHITE" iconLiteral="far-window-restore" />
                          </graphic>
                      </Button>
                      <Button id="exitButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#exit" prefHeight="30.0" prefWidth="45.0">
                          <graphic>
                              <FontIcon iconColor="WHITE" iconLiteral="far-window-close" />
                          </graphic>
                      </Button>
                  </children>
            </HBox>
          </children>
      </HBox>
   </children>
</fx:root>
